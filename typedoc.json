{
  "entryPoints": [
    "libs/**/src/index.ts",
  ],
  "out": "docs",
  "exclude": ["node_modules", "dist", "**/__tests__/**/*", "**/*.spec.ts", "apps/**/*"],
  "plugin": ["typedoc-plugin-markdown"],
  "excludeExternals": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "includeVersion": true,
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@steadfastdigital/*": ["libs/*"],
    }
  }
}